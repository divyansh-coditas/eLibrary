@model eLibrary.User

@{
    ViewBag.Title = "Create";
}

<head>
    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1516979187457-637abb4f9353?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjB8fGJvb2t8ZW58MHx8MHx8&w=1000&q=80');
            background-size: 1400px 700px;
        }
    </style>
</head>
<script>
    function ValidateAge() {
        let age = document.forms["RegistrationForm"]["Age"].value;
        if (age < 4) {
            alert();
            return false;
        }
    }
</script>


@using (@Html.BeginForm(null, null, FormMethod.Post, new { name = "RegistrationForm" }))
{
    <br>
    <br>
    <br>
    <h2 style="margin-left:15px;">Register</h2>
    @Html.AntiForgeryToken()

    <table style=" border-collapse:separate; border-spacing: 10px 15px">
        <tr>
            <td><label>Username:</label></td>
            <td>@Html.TextBoxFor(m => m.UserName, new { @Value = @Model.UserName, @required = "required" })</td>
        </tr>
        <tr>
            <td><label>Password:</label></td>
            <td>@Html.TextBoxFor(m => m.UserPassword, new { @Value = @Model.UserPassword, @required = "required" })</td>
        </tr>
        <tr>
            <td><label>ContactNo:</label></td>
            <td>@Html.TextBoxFor(m => m.ContactNo, new { @Value = @Model.ContactNo, @required = "required" })</td>
        </tr>
        <tr>
            <td><label>Address:</label></td>
            <td>@Html.TextBoxFor(m => m.UserAddress, new { @Value = @Model.UserAddress, @required = "required" })</td>
        </tr>
        <tr>
            <td><label>Ocuupation:</label></td>
            <td>@Html.TextBoxFor(m => m.Occupation, new { @Value = @Model.Occupation, @required = "required" })</td>
        </tr>
        <tr>
            <td><label>Age:</label></td>
            <td>@Html.TextBoxFor(m => m.Age, new { @Value = @Model.Age, @required = "required", name = "Age" })</td>
        </tr>
        <tr>
        </tr>
    </table>
<input type="submit" value="Register" class="buttonAb" style="margin-left:110px;">
@Html.ActionLink("Login", "Login", "User", htmlAttributes: new { @class = "buttonAb" })
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
