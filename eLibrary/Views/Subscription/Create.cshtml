@if (@money > 0)
{
    <div class="table-bordered tables" style="background-color:cornsilk; padding:8px 8px 8px 8px; opacity: 0.9">
        @using (Html.BeginForm("Create", "Subscription"))
        {

            <h2>Payment Details</h2>
            <table class="table table-bordered table-striped" style="border: 4px solid double;">
                <thead>
                    <tr>
                        <th>Username</th>

                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="background-color:cornsilk"><input type="text" name="Username" id="Username" required></td>
                        <td style="background-color:cornsilk"><input type="email" name="Email" id="Email" required></td>
                    </tr>
                </tbody>
            </table>
            <h4>Date Of Birth</h4>
            <input type="date" name="date" id="name"><br>
            <div>
                <h4>Gender</h4>
                <input type="radio" name="gender" value="male" required> Male<br>
                <input type="radio" name="gender" value="female" required> Female<br>
            </div>
            <h4>Payment Details</h4>
            <label>CardNumber</label><input type="tel" required><input type="tel" required><input type="tel" required>
            <label>CVV</label>
            <select required>
                <option>01 Jun</option>
                <option>02 Dec</option></select> 
            <select>
                <option>2023</option>
                <option>2024</option>
            </select>
            <label>Amount: </label>
            <label style="height:15px"><input type="hidden" name="money" value="@money">@money</label>
            <center>
                <div style="margin-top: 10px">
                    <input type="submit" name="PayNow" onclick="successfullySubscribed()" value="Submit" class="buttonAb" />
                </div>
            </center>
        }
    </div>
    
}
else
{
<center>
    <div style="opacity: 0.9">
        @using (Html.BeginForm("Create", "Subscription"))
        {
            <div class="table-bordered form-horizontal" style="background-color: cornsilk; width: 400px; border-radius:10px">
                <table>
                    <thead>
                        <tr>
                            <th class="subscribe" style="background-color:cornsilk"><h4 style="color:black">Select Months</h4></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="margin-bottom:10px">
                            <td>
                                <select name="str" style="margin-left:15px" required>
                                    <option >Select..</option>
                                    <option value="1">1Month</option>
                                    <option value="3">3Months</option>
                                    <option value="6">6Months</option>
                                    <option value="6">1Year</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="submit" value="Submit" style="margin-left:20px" class="btn subscribe1 buttonAb">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
 </center>
}


    

