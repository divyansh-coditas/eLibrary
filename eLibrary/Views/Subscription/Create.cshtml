@{
    ViewBag.Title = "Create";
    var money = ViewBag.Message;
}
<style>
    body {
        background-image: url('https://cdn.pixabay.com/photo/2020/05/16/16/43/book-5178205__480.jpg');
        background-repeat: no-repeat;
        background-size: 1400px 700px;
    }
</style>
