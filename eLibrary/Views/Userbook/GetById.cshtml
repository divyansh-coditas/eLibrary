@model IEnumerable<eLibrary.UserBookDetail>

@{
    ViewBag.Title = "GetById";
}
<br>
<br>
<br>
<style>
    body {
        background-image: url('https://images.unsplash.com/photo-1531685250784-7569952593d2?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8d2FsbHxlbnwwfHwwfHw%3D&w=1000&q=80');
        background-size: 1400px 700px;
    }
</style>

@if(Model.Any()){
<table class="table table-bordered tables">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bookname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubmissionDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bookname)
            </td>
            <td>
                @item.IssueDate.Value.ToShortDateString()
            </td>
            <td>
                @item.SubmissionDate.Value.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Submit", "Submit", new { bookid = item.BookId }, htmlAttributes: new { @class = "buttonAb" })
            </td>
        </tr>
    }

</table>
}
else
{
<center>
    <div class="jumbotron" style="height:200px; width: 500px; margin-top: 40px; background-color: lightyellow; opacity: 70%">
        <h3>Sorry!!! Currently you have no books</h3>
        @Html.ActionLink("Get Books", "GetBooks","Book", new { }, htmlAttributes: new { @class = "buttonAb buttonAbc" })
    </div>
</center>
}
